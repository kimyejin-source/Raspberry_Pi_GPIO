#!/usr/bin/bash  

LEDS=(14 15 18 23)  # 제어할 LED 핀 번호들을 배열로 저장

# 모든 핀을 출력 모드(op)로 설정하고, 초기값을 low(dl)로 설정
for PIN in "${LEDS[@]}"; do
	pinctrl set $PIN op  # 핀을 출력 모드로 설정
	pinctrl set $PIN dl  # 핀의 출력값을 low(0)로 설정하여 LED를 끔
done

